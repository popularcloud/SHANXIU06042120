<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/white"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>
	<View style="@style/line_f0Style" />
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:layout_height="118dp"
					android:layout_gravity="center_horizontal"
					android:background="@drawable/sign_update_shape"
					android:layout_marginTop="15dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/et_mention_1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="15dp"
						android:layout_alignParentLeft="true"
						android:gravity="top|left"
						android:background="@null"
						android:layout_alignParentTop="true"
						android:textSize="14sp"
						android:maxLength="30"
						android:maxLines="3"
						android:textColor="@color/black"
						android:hint="请输入你的个性签名"
						android:inputType="textMultiLine"
						android:textColorHint="@color/gray_99" />
					<TextView
						android:id="@+id/txt_mention_1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_alignParentBottom="true"
						android:layout_marginRight="15dp"
						android:layout_marginBottom="15dp"
						android:text="0/30"
						android:textColor="@color/gray_99"
						android:maxLength="16"
						android:textSize="14dp" />
				</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />
	<TextView
		android:id="@+id/btn_comment_submit"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_margin="15dp"
		android:layout_gravity="center_horizontal|bottom"
		android:background="@drawable/button_login_selector"
		android:text="保存"
		android:gravity="center"
		android:textSize="16sp"
		android:textColor="@color/white" />
</LinearLayout>
