<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5px"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="14"
                android:text="密修平台服务商维修密修平台服务商维修密修平台服务商维修密修平台服务商维修密修平台服务商维修密修平台服务商维修密修平台服务商维修密修平台服务商维修密修平台服务商维修"
                android:textColor="@color/black_0a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_cirle_red_shape"
                android:gravity="left"
                android:layout_toRightOf="@+id/tv_title"
                android:layout_marginLeft="5dp"
                android:padding="1dp"
                android:text="未通过"
                android:textColor="@color/red_3a"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台"
            android:textColor="@color/gray_99"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_view_count"
                android:drawablePadding="5dp"
                android:text="789次"
                android:textColor="@color/gray_99"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:drawableLeft="@drawable/ic_create_time"
                android:drawablePadding="5dp"
                android:text="56分钟前"
                android:textColor="@color/gray_99"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo_new"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/iv_is_video"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_video"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
