<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:background="@color/grey_f1"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>

	<RelativeLayout
	    android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:gravity="center_vertical"
		android:background="@color/white">
		<TextView
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="47dp"
			android:text="系统通知"
			android:textColor="@color/black_66"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:gravity="center_vertical"
			android:textSize="13sp" />

		<ImageView
			android:id="@+id/img_notifi"
			android:layout_marginRight="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="right"
			android:layout_width="44dp"
			android:layout_height="28dp"
			android:background="@drawable/shezhi_anniu1" />
	</RelativeLayout>
	<View style="@style/line_c8Style"/>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:gravity="center_vertical"
		android:background="@color/white">
		<TextView
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="47dp"
			android:text="音效/震动"
			android:textColor="@color/black_66"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:gravity="center_vertical"
			android:textSize="13sp" />

		<ImageView
			android:id="@+id/img_voice"
			android:layout_marginRight="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="right"
			android:layout_width="44dp"
			android:layout_height="28dp"
			android:background="@drawable/shezhi_anniu1" />
	</RelativeLayout>

	<TextView
		android:layout_marginTop="10dp"
		android:id="@+id/txtIssue"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:background="@drawable/selector_item_bg"
		android:drawablePadding="20dp"
		android:drawableRight="@drawable/you_new"
		android:gravity="center_vertical"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:text="常见问题"
		android:textColor="@color/black_66"
		android:textSize="13sp"/>
	<View style="@style/line_c8Style"
		android:visibility="visible"/>
	<TextView
		android:id="@+id/txtUserGuide"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:background="@drawable/selector_item_bg"
		android:drawablePadding="20dp"
		android:drawableRight="@drawable/you_new"
		android:gravity="center_vertical"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:text="用户指南"
		android:textColor="@color/black_66"
		android:textSize="13sp"
		android:visibility="visible"/>
	<View style="@style/line_c8Style"/>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="47dp"
		>
		<TextView
			android:id="@+id/txt_vision"
			android:layout_width="match_parent"
			android:layout_height="47dp"
			android:text="版本信息"
			android:textColor="@color/black_66"
			android:background="@drawable/selector_item_bg"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:gravity="center_vertical"
			android:drawableRight="@drawable/you_new"
			android:textSize="13sp" />
		<ImageView
			android:id="@+id/iv_red"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="33dp"
			android:src="@drawable/red_mention"
			android:visibility="gone"/>
	</RelativeLayout>
	<View style="@style/line_c8Style"
		android:visibility="visible"/>
	<TextView
		android:id="@+id/txtFeedback"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:background="@drawable/selector_item_bg"
		android:drawablePadding="20dp"
		android:drawableRight="@drawable/you_new"
		android:gravity="center_vertical"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:text="意见反馈"
		android:textColor="@color/black_66"
		android:textSize="13sp"
		android:visibility="visible"/>


	<Button
		android:id="@+id/btnOutLogin"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginTop="100dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="20dp"
		android:background="@drawable/button_login_selector"
		android:gravity="center"
		android:textSize="15sp"
		android:text="退出登录"
		android:textColor="#fff" />
</LinearLayout>
