<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:background="@color/f0_gray_line"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>

	<RelativeLayout
	    android:layout_marginTop="1px"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:gravity="center_vertical"
		android:background="@color/white">
		<TextView
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="47dp"
			android:text="系统通知"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:drawableLeft="@drawable/ic_setting_notice"
			android:drawablePadding="10dp"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:gravity="center_vertical" />

		<ImageView
			android:id="@+id/img_notifi"
			android:layout_marginRight="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shezhi_anniu1" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_marginTop="1px"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:gravity="center_vertical"
		android:background="@color/white">
		<TextView
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="47dp"
			android:text="音效/震动"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:drawableLeft="@drawable/ic_setting_voice"
			android:drawablePadding="10dp"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:gravity="center_vertical" />

		<ImageView
			android:id="@+id/img_voice"
			android:layout_marginRight="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shezhi_anniu1" />
	</RelativeLayout>

	<TextView
		android:layout_marginTop="8px"
		android:id="@+id/txtIssue"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:background="@drawable/selector_item_bg"
		android:drawableRight="@drawable/you_new"
		android:gravity="center_vertical"
		android:paddingLeft="15dp"
		android:drawableLeft="@drawable/ic_setting_question"
		android:drawablePadding="10dp"
		android:paddingRight="15dp"
		android:text="常见问题"
		android:textColor="@color/black"
		android:textSize="15sp"/>
	<TextView
		android:id="@+id/txtUserGuide"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_marginTop="1px"
		android:background="@drawable/selector_item_bg"
		android:drawableRight="@drawable/you_new"
		android:gravity="center_vertical"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:drawableLeft="@drawable/ic_setting_user_guide"
		android:drawablePadding="10dp"
		android:text="用户指南"
		android:textColor="@color/black"
		android:textSize="15sp"
		android:visibility="visible"/>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_marginTop="1px"
		>
		<TextView
			android:id="@+id/txt_vision"
			android:layout_width="match_parent"
			android:layout_height="47dp"
			android:text="版本信息"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:background="@drawable/selector_item_bg"
			android:paddingLeft="15dp"
			android:drawableLeft="@drawable/ic_setting_version"
			android:drawablePadding="10dp"
			android:paddingRight="15dp"
			android:gravity="center_vertical"
			android:drawableRight="@drawable/you_new"/>
		<ImageView
			android:id="@+id/iv_red"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="33dp"
			android:src="@drawable/red_mention"
			android:visibility="gone"/>
	</RelativeLayout>
	<TextView
		android:id="@+id/txtFeedback"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_marginTop="1px"
		android:background="@drawable/selector_item_bg"
		android:drawableRight="@drawable/you_new"
		android:gravity="center_vertical"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:drawableLeft="@drawable/ic_setting_feedback"
		android:drawablePadding="10dp"
		android:text="意见反馈"
		android:textColor="@color/black"
		android:textSize="15sp"
		android:visibility="visible"/>
	<TextView
		android:id="@+id/txtUserAgreement"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_marginTop="1px"
		android:background="@drawable/selector_item_bg"
		android:drawableRight="@drawable/you_new"
		android:gravity="center_vertical"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:drawableLeft="@drawable/ic_user_agreement"
		android:drawablePadding="10dp"
		android:text="用户协议&amp;隐私政策"
		android:textColor="@color/black"
		android:textSize="15sp"
		android:visibility="visible"/>
	<View android:layout_width="match_parent"
		android:layout_height="0dp"
		android:background="@color/f0_gray_line"
		android:layout_weight="1" />
	<TextView
		android:id="@+id/btnOutLogin"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_margin="15dp"
		android:background="@drawable/button_login_selector"
		android:gravity="center"
		android:textSize="16sp"
		android:text="退出登录"
		android:textColor="#fff" />
</LinearLayout>
