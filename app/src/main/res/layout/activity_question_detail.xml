<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/f0_gray_line" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_question_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black_0a"
            android:textSize="16sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:textColor="@color/black_66"
            android:lineSpacingMultiplier="1.2"
            android:textSize="14sp"
            android:text=""/>
        <com.lwc.shanxiu.view.MyGridView
            android:id="@+id/gridview_show"
            android:layout_below="@+id/tv_content"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:columnWidth="100dp"
            android:verticalSpacing="7dp"
            android:horizontalSpacing="7dp"
            android:numColumns="3"
            android:scrollbars="none"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="12dp">
        <TextView
            android:id="@+id/tv_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="11sp"
            android:text=""
            android:drawableLeft="@drawable/ic_view_count"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="11sp"
            android:text="10个"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="5dp"
            android:layout_marginLeft="13dp"
            />
        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="11sp"
            android:text=""
            android:maxLength="10"
            android:drawableLeft="@drawable/ic_create_time"
            android:drawablePadding="5dp"
            android:layout_marginLeft="13dp"
            />
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_author"
            android:layout_marginLeft="13dp"
            android:textColor="@color/gray_99"
            android:text=""/>
        <View android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_show_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_blue_nomal"
            android:textSize="14sp"
            android:text="展开问题"
            android:layout_gravity="right"
            android:gravity="right"
            android:drawableRight="@drawable/ic_show_down_blue"
            android:drawablePadding="5dp"
            android:layout_marginLeft="13dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8px"
        android:background="@color/white"
        android:padding="15dp">
        <TextView
            android:id="@+id/tv_answer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/btn_blue_nomal"
            android:text="回答 0"/>
       <!-- <TextView
            android:id="@+id/tv_retract_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_show_down_gray"
            android:drawablePadding="5dp"
            android:textColor="@color/gray_99"
            android:text="收起"/>-->
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/f0_gray_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/iv_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="15sp"
            android:text="暂无回答，快来抢下第一个答案"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="15dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_answer_by_me"
            android:textColor="@color/btn_blue_nomal"
            android:text="我来答"/>
    </LinearLayout>
</LinearLayout>