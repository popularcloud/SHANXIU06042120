<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:background="@color/bg_f0">
	<include layout="@layout/include_title" />
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="4dp"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="请选择你成为的服务商类型"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/ll_work"
			android:layout_width="99dp"
			android:layout_height="41dp"
			android:orientation="horizontal"
			android:background="@drawable/btn_gray_select_shape"
			android:gravity="center">
			<TextView
				android:id="@+id/tv_work"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/black"
				android:layout_marginRight="5dp"
				android:text="办公设备" />

			<CheckBox
				android:id="@+id/cb_work"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/CustomCheckBoxTheme"
				android:textSize="15sp"
				android:checked="false"
				android:textColor="@color/black"/>
		</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_electric"
				android:layout_width="99dp"
				android:layout_height="41dp"
				android:layout_marginLeft="24dp"
				android:gravity="center"
				android:background="@drawable/btn_gray_select_shape"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tv_electric"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:layout_marginRight="5dp"
					android:text="家用电器"/>
				<CheckBox
					android:id="@+id/cb_electric"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/CustomCheckBoxTheme"
					android:checked="false"
					android:textSize="15sp"
					android:textColor="@color/black"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="4dp"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="请选择您擅长的维修项目"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:orientation="horizontal">
			<android.support.v7.widget.RecyclerView
				android:id="@+id/rv_repair_pro"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="bottom|left"
		android:textSize="14sp"
		android:textColor="@color/btn_blue_nomal"
		android:layout_marginLeft="15sp"
		android:text="注:请根据你的实际情况选择"/>
	<TextView
		android:id="@+id/tv_next"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_margin="15dp"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/button_login_selector"
		android:gravity="center"
		android:textSize="15sp"
		android:text="下一步"
		android:textColor="#fff" />
</LinearLayout>
