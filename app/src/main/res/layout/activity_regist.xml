<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:background="@color/bg_f0">
	<include layout="@layout/include_title" />
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="4dp"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="姓名"/>
		<EditText
			android:id="@+id/et_name"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请填写真实姓名"
			android:paddingLeft="15dp"
			android:textSize="15dp"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:background="@color/white"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:layout_marginRight="15dp"
			android:text="性别"/>
		<CheckBox
			android:id="@+id/cb_boy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/CustomCheckBoxTheme"
			android:textSize="15sp"
			android:textColor="@color/black"
			android:text="男"/>
		<CheckBox
			android:id="@+id/cb_girl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:textSize="15sp"
			style="@style/CustomCheckBoxTheme"
			android:textColor="@color/black"
			android:text="女"/>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="账号"/>
		<EditText
			android:id="@+id/et_phone"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请填写手机号码"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:inputType="phone"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="密码"/>
		<EditText
			android:id="@+id/et_passWord"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请设置登录密码"
			android:inputType="textPassword"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:maxEms="16"
			android:minEms="6"
			android:textSize="15sp"
			android:background="@color/white"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="确认密码"/>
		<EditText
			android:id="@+id/et_passWordAgain"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请确认登录密码"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:inputType="textPassword"
			android:maxEms="16"
			android:minEms="6"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="8px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="身份证号"/>
		<EditText
			android:id="@+id/et_idCard"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请确认身份证号码"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="上传身份证照片"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:orientation="horizontal">
			<com.lwc.shanxiu.view.RoundAngleImageView
				android:id="@+id/iv_id_positive"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="102dp"
				android:scaleType="fitXY"
				android:layout_marginRight="15dp"
				android:src="@drawable/ic_id_positive"/>
			<com.lwc.shanxiu.view.RoundAngleImageView
				android:id="@+id/iv_id_back"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:scaleType="fitXY"
				android:layout_height="102dp"
				android:src="@drawable/ic_id_back"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="15dp"
			android:orientation="horizontal">
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_marginRight="15dp"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/black_66"
				android:text="身份证正面"/>
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/black_66"
				android:text="身份证反面"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="8px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="公司/店铺地址"/>
		<TextView
			android:id="@+id/tv_address"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请选择地址"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:drawablePadding="10dp"
			android:gravity="right"
			android:drawableRight="@drawable/ic_arrow_right"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="详细地址"/>
		<EditText
			android:id="@+id/et_addressDetail"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请输入详细的地址"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:drawablePadding="10dp"
			android:gravity="right"
			android:layout_height="wrap_content" />
	</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="8px"
				android:background="@color/white"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="公司名称"/>
				<EditText
					android:id="@+id/et_company_name"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请输入公司名称"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:paddingLeft="15dp"
					android:textSize="15sp"
					android:background="@color/white"
					android:drawablePadding="10dp"
					android:gravity="right"
					android:layout_height="wrap_content" />
			</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="营业执照信用代码"/>
		<EditText
			android:id="@+id/et_creditCode"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请输入信用代码"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:drawablePadding="10dp"
			android:gravity="right"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:layout_gravity="center"
			android:text="上传营业执照"/>
		<com.lwc.shanxiu.view.RoundAngleImageView
			android:id="@+id/iv_business_license"
			android:layout_width="228dp"
			android:layout_height="191dp"
			android:layout_marginTop="18dp"
			android:scaleType="fitXY"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/ic_business_license" />
	</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="8px"
				android:background="@color/white"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="验证码"/>
				<EditText
					android:id="@+id/et_code"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请输入验证码"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:paddingLeft="15dp"
					android:textSize="15sp"
					android:background="@color/white"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/tv_getCode"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingLeft="29dp"
					android:paddingRight="29dp"
					android:textSize="15sp"
					android:textColor="@color/btn_blue_nomal"
					android:text="获取验证码"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<TextView
		android:id="@+id/btnNext"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_margin="15dp"
		android:layout_gravity="center_horizontal|bottom"
		android:background="@drawable/button_login_selector"
		android:gravity="center"
		android:textSize="15sp"
		android:text="下一步"
		android:textColor="#fff" />
</LinearLayout>
