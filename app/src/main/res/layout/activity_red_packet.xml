<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:orientation="vertical" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/invitation_activities_redbag_close"/>
            <TextView
                android:id="@+id/tv_open"
                android:layout_marginTop="40dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:visibility="visible"
                android:text="恭喜您完成订单\n获得一次拆红包机会"
                android:textColor="@color/white"/>
            <LinearLayout
                android:id="@+id/rl_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="恭喜您获得"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:text="2.8元现金红包"
                    android:textColor="@color/white"/>

                <com.lwc.shanxiu.view.TileButton
                    android:id="@+id/btnFind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/invitation_activities_redbag_buttton"></com.lwc.shanxiu.view.TileButton>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_gz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="15sp"
                android:clickable="true"
                android:text="活动规则"
                android:textColor="@color/white"/>
        </FrameLayout>
        <Button
            android:id="@+id/img_close"
            android:layout_gravity="center_horizontal"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:background="@drawable/invitation_activities_close"/>
    </LinearLayout>

</RelativeLayout>