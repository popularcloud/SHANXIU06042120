<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/bg_f7"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<include layout="@layout/include_title"/>
	<View style="@style/line_f0Style"  />
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">
		<TextView
			android:id="@+id/tv_money"
			android:textColor="@color/black_66"
			android:layout_width="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_height="wrap_content"
			android:layout_marginTop="35dp"
			android:text="充值金额"
			android:textSize="15sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="¥"
			android:textSize="30sp"
			android:layout_centerHorizontal="true"
			android:textColor="@color/black_0a"
			android:layout_toLeftOf="@id/et_money"
			android:layout_below="@id/tv_money"
			android:layout_alignBaseline="@id/et_money"
			android:layout_marginTop="35dp"/>
		<EditText
			android:id="@+id/et_money"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:textSize="36sp"
			android:maxLength="8"
			android:gravity="center_horizontal"
			android:inputType="numberSigned"
			android:layout_below="@id/tv_money"
			android:layout_marginTop="35dp"
			android:digits="0123456789."
			android:textColor="@color/black"
			android:textColorHint="@color/gray_99"
			android:background="@null" />
		<View style="@style/line_f0Style" android:layout_width="176dp" android:layout_below="@+id/et_money" android:layout_centerHorizontal="true" android:layout_marginBottom="31dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:textSize="9sp"
			android:layout_marginRight="20dp"
			android:textColor="@color/gray_99"
			android:visibility="gone"
			android:text="单次充值金额最多10000元"/>
	</RelativeLayout>
<!--	<TextView
		android:textColor="@color/gray_99"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:gravity="center_vertical"
		android:layout_marginLeft="15dp"
		android:text="选择充值方式"
		android:textSize="12sp"/>-->
	<RelativeLayout
		android:id="@+id/rl_wechat_pay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
        android:padding="15dp"
		android:background="@drawable/selector_item_bg">
        <ImageView
            android:id="@+id/iv_header_wechat"
            android:layout_width="24dp"
            android:layout_height="24dp"
			android:layout_centerVertical="true"
            android:src="@drawable/account_wechat_money"/>
		<TextView
            android:id="@+id/tv_wechat"
			android:textColor="@color/black_0a"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_header_wechat"
			android:text="微信充值"
			android:gravity="center_vertical"
			android:textSize="15sp"/>
        <TextView
            android:textColor="@color/gray_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_header_wechat"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_wechat"
            android:text="推荐安装微信的用户使用"
            android:gravity="center_vertical"
            android:textSize="12sp"/>
        <ToggleButton
			android:id="@+id/tBtnSecretWechat"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:button="@drawable/wallet_switch_btn"
			android:checked="true"
			android:layout_marginRight="20dp"
			android:textOff=""
			android:textOn=""/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/rl_ali_pay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:padding="15dp"
		android:layout_marginTop="1px"
		android:background="@drawable/selector_item_bg">
        <ImageView
            android:id="@+id/iv_header_alipay"
            android:layout_width="24dp"
            android:layout_height="24dp"
			android:layout_centerVertical="true"
            android:src="@drawable/account_alipay"/>
		<TextView
            android:id="@+id/tv_alipay"
			android:textColor="@color/black_0a"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_header_alipay"
			android:layout_marginLeft="15dp"
			android:text="支付宝充值"
			android:gravity="center_vertical"
			android:textSize="15sp"/>
        <TextView
            android:textColor="@color/gray_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_header_alipay"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_alipay"
            android:text="推荐有支付宝账号的用户使用"
            android:gravity="center_vertical"
            android:textSize="12sp"/>
		<ToggleButton
			android:id="@+id/tBtnSecretAlipay"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:layout_marginRight="20dp"
			android:button="@drawable/wallet_switch_btn"
			android:checked="false"
			android:textOff=""
			android:textOn=""/>
	</RelativeLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"/>
