<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_knowledge_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="true">
    <include android:id="@+id/in_title" layout="@layout/include_search_title_white"/>
    <com.lwc.shanxiu.widget.TagsLayout
        android:id="@+id/tl_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/in_title"
        android:background="@color/f0_gray_line"
        android:layout_margin="15dp"
        lee:tagHorizontalSpace="5dp"
        lee:tagVerticalSpace="5dp" />
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="1px"
        android:layout_below="@id/tl_tags">
        <View
            android:id="@+id/line_type"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/f0_gray_line"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="设备类型"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/line_type"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_sel_down"
            android:layout_marginRight="60dp"/>
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_toRightOf="@+id/line_type"
            android:drawableRight="@drawable/ic_sel_down"
            android:drawablePadding="5dp"
            android:text="品牌"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"/>
    </RelativeLayout>
 <!--   <TextView style="@style/text_tip"
        android:id="@+id/textTip"
        android:visibility="gone"/>-->
    <ImageView
        android:id="@+id/iv_no_data"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_no_data"/>
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mBGARefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg1"
        android:layout_marginTop="8px"
        android:layout_below="@+id/rl_type">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
    <LinearLayout
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_request"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/btn_cirle_blue_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="提问"/>
        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/btn_cirle_blue_shape"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:text="发表"/>
        <TextView
            android:id="@+id/tv_agreeList"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/btn_cirle_blue_nomal_shape"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:text="通过"/>
    </LinearLayout>
</RelativeLayout>
