<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_knowledge_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_search_title_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="1px">
        <View
            android:id="@+id/line_type"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/bg1"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="14sp"
            android:text="设备类型"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/line_type"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_sel_down"
            android:layout_marginRight="60dp"/>
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/line_type"
            android:drawableRight="@drawable/ic_sel_down"
            android:drawablePadding="5dp"
            android:text="品牌"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"/>
    </RelativeLayout>
 <!--   <TextView style="@style/text_tip"
        android:id="@+id/textTip"
        android:visibility="gone"/>-->
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mBGARefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg1"
        android:layout_marginTop="1px">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
</LinearLayout>
