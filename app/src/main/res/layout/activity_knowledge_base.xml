<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_knowledge_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_35"
        android:orientation="vertical">
        <include android:id="@+id/in_title" layout="@layout/include_search_title_blue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_request"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_ask_question"
                android:text="提个问题"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_publish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_publish_article"
                    android:text="发表文章"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:text="有奖"
                android:textSize="10sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:gravity="top|center"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/ic_has_prize"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_agreeList"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_k_persional"
                android:text="个人中心"/>
            <TextView
                android:id="@+id/tv_k_information"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_k_information"
                android:text="密修资讯"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="1px"
        android:layout_below="@id/ll_head">
        <View
            android:id="@+id/line_type"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/f0_gray_line"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="设备类型"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/line_type"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_sel_down"
            android:layout_marginRight="60dp"/>
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_toRightOf="@+id/line_type"
            android:drawableRight="@drawable/ic_sel_down"
            android:drawablePadding="5dp"
            android:text="品牌"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"/>
    </RelativeLayout>
 <!--   <TextView style="@style/text_tip"
        android:id="@+id/textTip"
        android:visibility="gone"/>-->
    <ImageView
        android:id="@+id/iv_no_data"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_no_data"/>
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mBGARefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f0_gray_line"
        android:layout_marginTop="8px"
        android:layout_below="@+id/rl_type">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
