<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/show_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_isAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_display"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/red_envelope_ubg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="xxxx显卡" />
            <com.lwc.shanxiu.widget.TagsLayout
                android:id="@+id/tl_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                lee:tagHorizontalSpace="5dp"
                lee:tagVerticalSpace="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_prices"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="@color/red_money"
                    android:paddingLeft="10dp"
                    android:text="￥30.00"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="25dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true">
                    <LinearLayout
                        android:id="@+id/ll_reduce"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_reduce_shape"
                        android:padding="5dp">
                        <ImageView
                            android:id="@+id/tv_reduce"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="2dp"
                            android:src="@drawable/ic_reduce"/>
                        </LinearLayout>

                    <EditText
                        android:id="@+id/et_sum"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:background="@drawable/add_reduce_shape"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:text="1"/>
                    <LinearLayout
                        android:id="@+id/ll_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_reduce_shape"
                        android:padding="5dp">
                        <ImageView
                            android:id="@+id/tv_add"
                            android:padding="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:src="@drawable/ic_add"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
