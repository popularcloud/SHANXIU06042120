<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_bg_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_175"
            android:background="@drawable/shape_blue"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/txtActionbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:onClick="onBack"
                    android:padding="15dp"
                    android:src="@drawable/back"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:text="提交"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgRight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/me_news_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgNewMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/red_mention"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_160"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/shape_blue_oval"/>
        <com.meetsl.scardview.SCardView
            android:id="@+id/cv_presentOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_65"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardBackgroundColor="@color/white"
            app:cardLightDirection="none"
            app:cardElevation="@dimen/dp_8"
            android:padding="@dimen/dp_5"
            app:cardShadowStartColor="#37C0C5C7"
            app:cardShadowEndColor="#03B7BABB">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:background="@drawable/oval_gray_bg">
                    <com.lwc.shanxiu.widget.CircleImageView
                        android:id="@+id/img_head"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:src="@drawable/default_portrait_100" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:text="姓名"/>
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_99"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:text="广东智修互联大数据有限公司"/>
                </LinearLayout>
             </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:background="@drawable/oval_gray_bg">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_work_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/btn_blue_nomal"
                        android:textSize="@dimen/sp_18"
                        android:text="0"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_33"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:text="出勤天数"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_rest_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/btn_blue_nomal"
                        android:textSize="@dimen/sp_18"
                        android:text="0"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_33"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:text="休息天数"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_out_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/btn_blue_nomal"
                        android:textSize="@dimen/sp_18"
                        android:text="0"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_33"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:text="外勤次数"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_late_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/btn_blue_nomal"
                        android:textSize="@dimen/sp_18"
                        android:text="0"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_33"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:text="异常次数"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </com.meetsl.scardview.SCardView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#414141"
        android:textSize="@dimen/sp_14"
        android:text="内外勤管理"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_15"
        android:orientation="horizontal"
        android:background="@drawable/oval_gray_bg">
            <TextView
                android:id="@+id/tv_kqdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:drawableTop="@drawable/ic_kaoqing"
                android:textSize="@dimen/sp_12"
                android:text="考勤打卡"/>
            <TextView
                android:id="@+id/tv_cqrl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center"
                android:drawableTop="@drawable/ic_rili"
                android:textSize="@dimen/sp_12"
                android:text="考勤日历"/>
            <TextView
                android:id="@+id/tv_wqqd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:drawableTop="@drawable/ic_qiandao"
                android:textSize="@dimen/sp_12"
                android:text="外勤签到"/>
            <TextView
                android:id="@+id/tv_qdjl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:drawableTop="@drawable/ic_jilu"
                android:textSize="@dimen/sp_12"
                android:text="签到记录"/>
    </LinearLayout>
    <View style="@style/line_f0Style" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"/>
    <LinearLayout
        android:id="@+id/ll_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_60"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_status"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:clickable="false"
            android:textColor="@color/white"
            android:text=""/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:clickable="false"
            android:textColor="@color/white"
            android:text=""/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>