<?xml version="1.0" encoding="utf-8"?>
<com.lwc.shanxiu.view.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/oval_gray_bg">
                <com.lwc.shanxiu.widget.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/dp_57"
                    android:layout_height="@dimen/dp_57"
                    android:src="@drawable/default_portrait_100" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_head"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textColor="@color/gray_99"
                    android:layout_below="@+id/tv_name"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/tv_present_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/txtName"
                    android:text=""
                    android:background="@drawable/btn_round_gray_f9"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawableRight="@drawable/ic_down_select"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/gray_99"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8FC"
        android:orientation="vertical"
        app:calendar_content_view_id="@+id/nestedScrollView"
        app:calendar_show_mode="only_month_view"
        app:default_status="shrink">
        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8FC"
            app:calendar_padding="@dimen/dp_8"
            app:current_day_lunar_text_color="@color/black"
            app:current_day_text_color="@color/black"
            app:current_month_lunar_text_color="@color/btn_blue_nomal"
            app:current_month_text_color="#333333"
            app:lunar_text_size="@dimen/sp_14"
            app:max_year="2050"
            app:max_year_day="31"
            app:max_year_month="12"
            app:min_year="2020"
            app:min_year_day="1"
            app:min_year_month="1"
            app:month_view="com.lwc.shanxiu.widget.CustomerDateView.CustomMonthView"
            app:month_view_show_mode="mode_only_current"
            app:other_month_lunar_text_color="#e1e1e1"
            app:other_month_text_color="#ff000000"
            app:scheme_lunar_text_color="#CFCFCF"
            app:scheme_text="假"
            app:scheme_text_color="#333"
            app:scheme_theme_color="#128c4b"
            app:selected_lunar_text_color="@color/white"
            app:selected_text_color="@color/white"
            app:selected_theme_color="#1482FF"
            app:week_background="#F8F8FC"
            app:week_bar_height="@dimen/dp_46"
            app:week_bar_view="com.lwc.shanxiu.widget.CustomerDateView.CustomWeekBar"
            app:week_line_background="#00000000"
            app:week_line_margin="@dimen/dp_16"
            app:week_start_with="sun"
            app:week_text_size="@dimen/sp_14"
            app:week_view="com.lwc.shanxiu.widget.CustomerDateView.CustomWeekView"
            app:year_view_background="#f6f6f6"
            app:year_view_day_text_color="#333333"
            app:year_view_day_text_size="8sp"
            app:year_view_month_text_color="#ff0000"
            app:year_view_month_text_size="20sp"
            app:year_view_scheme_color="#f17706"
            app:year_view_week_height="0dp"
            app:year_view_week_text_color="#666666"
            app:select_mode="single_mode"
            app:year_view_week_text_size="7sp" />
    </com.haibin.calendarview.CalendarLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_45"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/line_cc"
        android:text="当天没有打卡记录" />
</LinearLayout>
</LinearLayout>
</com.lwc.shanxiu.view.MyScrollView>