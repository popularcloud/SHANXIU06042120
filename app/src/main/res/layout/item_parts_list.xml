        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_bg"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_display"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/red_envelope_ubg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="xxxx显卡" />
                <TextView
                    android:id="@+id/tvAddList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="加入清单"
                    android:textColor="@color/btn_red"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/button_circular_red_shape"/>
            </LinearLayout>

        <!--    <TextView
                android:id="@+id/tv_tags"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="显卡，GTX-1060,6G"/>-->
            <com.lwc.shanxiu.widget.TagsLayout
                android:id="@+id/tl_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                lee:tagHorizontalSpace="5dp"
                lee:tagVerticalSpace="20dp" />
            <TextView
                android:id="@+id/tv_prices"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="top"
                android:textSize="14sp"
                android:textColor="@color/red_money"
                android:paddingLeft="10dp"
                android:text="￥30.00"/>
        </LinearLayout>
        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>