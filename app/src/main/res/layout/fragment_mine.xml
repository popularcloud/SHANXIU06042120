<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg_new">
                <com.lwc.shanxiu.widget.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/default_portrait_100"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_head"
                    android:paddingBottom="5dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentTop="true"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/txt_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="综合评分："
                        android:textColor="@color/white"
                        android:layout_below="@+id/txt_name"
                        android:textSize="14sp" />
                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginTop="7dp"
                        android:isIndicator="true"
                        android:layout_below="@+id/txt_name"
                        android:layout_toRightOf="@+id/txt_sign"
                        android:numStars="5" />
                    <TextView
                        android:id="@+id/txtOrderCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="订单总数：10单"
                        android:layout_below="@+id/txt_sign"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/info_dd"
                    android:drawablePadding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="订单总数"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingRight="20dp"
                    android:text="0单"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtMyOrder"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/me_order"
                android:drawablePadding="22dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:paddingRight="20dp"
                android:text="我的订单"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

            <View
                style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/txtWallet"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/zh_new"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="我的钱包"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

            <View style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/txtEvaluate"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/yhq_new"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="我的评价"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
            <View style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtUserGuide"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/yonghuzn"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="用户指南"
                android:textColor="@color/black_66"
                android:textSize="14sp"
                android:visibility="gone"/>
            <View style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtFeedback"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/me_feedback"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="意见反馈"
                android:textColor="@color/black_66"
                android:textSize="14sp"
                android:visibility="gone"/>

            <View
                style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/txtUserInfor"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/grzl_new"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="个人资料"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

            <View
                style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txt_jineng"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/info_jn"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="我的技能"
                android:textColor="@color/black_66"
                android:textSize="14sp"
                android:visibility="visible"/>

            <View style="@style/line_c8Style" />

            <TextView
                android:id="@+id/txt_knowledge_base"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/ic_knowledge_base"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="知识库"
                android:textColor="@color/black_66"
                android:textSize="14sp"
                android:visibility="visible"/>

            <View style="@style/line_c8Style" />

            <View
                style="@style/line_c8Style"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp">

                <TextView
                    android:id="@+id/txt_setting"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/selector_item_bg"
                    android:drawableLeft="@drawable/sz_new"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/you_new"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="设置"
                    android:textColor="@color/black_66"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="33dp"
                    android:src="@drawable/red_mention"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/txt_kf"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/me_service"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="客服"
                android:textColor="@color/black_66"
                android:textSize="14sp"/>

            <View
                style="@style/line_c8Style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/txt_share"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/selector_item_bg"
                android:drawableLeft="@drawable/fx_new"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="分享"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

            <View
                style="@style/line_c8Style"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
