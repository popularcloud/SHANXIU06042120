	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/selector_item_bg"
		android:gravity="center_vertical"
		android:layout_marginTop="11dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:orientation="horizontal">
		<com.lwc.shanxiu.widget.CircleImageView
			android:id="@+id/imgIcon"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"
			android:src="@drawable/default_portrait_100" />
		<TextView
			android:id="@+id/txtName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"
			android:layout_toRightOf="@+id/imgIcon"
			android:text="李大宝"
			android:textColor="@color/black"
			android:textSize="14sp" />
		<TextView
			android:id="@+id/tv_certification"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/txtName"
			android:layout_alignBaseline="@+id/txtName"
			android:gravity="center_vertical"
			android:lines="1"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="10dp"
			android:paddingLeft="1dp"
			android:paddingRight="1dp"
			android:text="认证"
			android:background="@drawable/btn_round_white_bg_blue_bian"
			android:textColor="@color/btn_blue_nomal"
			android:textSize="10sp" />

		<com.hedgehog.ratingbar.RatingBar
			android:id="@+id/ratingBar_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/imgIcon"
			android:layout_below="@+id/txtName"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="15dp"
			hedgehog:clickable="false"
			hedgehog:halfstart="true"
			hedgehog:starCount="5"
			hedgehog:starEmpty="@drawable/start1"
			hedgehog:starFill="@drawable/start2"
			hedgehog:starHalf="@drawable/start3"
			hedgehog:starImageHeight="15dp"
			hedgehog:starImageWidth="15dp"
			hedgehog:starImagePadding="3dp"/>
		<TextView
			android:id="@+id/txt_dones"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="8dp"
			android:layout_below="@+id/txtName"
			android:layout_toRightOf="@+id/ratingBar_1"
			android:gravity="center_vertical"
			android:lines="1"
			android:layout_marginRight="15dp"
			android:textColor="@color/gray_99"
			android:textSize="10sp" />
		<ImageView
			android:id="@+id/iv_bohao"
			android:clickable="true"
			android:layout_width="29dp"
			android:layout_height="29dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="15dp"
			android:src="@drawable/ic_bohao"
			android:layout_alignParentRight="true"
			android:drawablePadding="3dp"/>

		<View android:id="@+id/line_header" style="@style/line_f0Style" android:layout_below="@id/imgIcon" android:layout_marginTop="12dp" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="11dp"
			android:layout_below="@+id/line_header"
			android:layout_marginRight="12dp"
			android:paddingBottom="10dp"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/txtSkilled"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:lines="1"
				android:paddingLeft="1dp"
				android:paddingRight="1dp"
				android:text="擅长"
				android:background="@drawable/btn_round_white_bg_blue_bian"
				android:textColor="@color/btn_blue_nomal"
				android:textSize="10sp" />
			<TextView
				android:id="@+id/txtSkilled_content"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:lines="1"
				android:ellipsize="end"
				android:text=""
				android:textColor="@color/gray_99"
				android:layout_marginRight="5dp"
				android:layout_marginLeft="2dp"
				android:textSize="11sp"/>
			<TextView
				android:id="@+id/txtDistance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:drawableLeft="@drawable/fujindingdan_juli"
				android:text="0km"
				android:drawablePadding="5dp"
				android:textColor="@color/gray_99"
				android:textSize="12sp" />
		</LinearLayout>
	</RelativeLayout>

