<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_circle"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="（单选题）古人云：君子处其实，不处其华，治其内，不治其外 这句话提醒教师教学过程中应该重视（）"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_answerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/circular_gray_line_shape"
            android:gravity="center"
            android:text="A" />
        <TextView
            android:id="@+id/tv_answerA_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="学生的行为培养"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_answerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/circular_gray_line_shape"
            android:gravity="center"
            android:text="B" />
        <TextView
            android:id="@+id/tv_answerB_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="学生的行为培养"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_answerC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/circular_gray_line_shape"
            android:gravity="center"
            android:text="C" />
        <TextView
            android:id="@+id/tv_answerC_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="学生的行为培养"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_answerD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/circular_gray_line_shape"
            android:gravity="center"
            android:text="D" />
        <TextView
            android:id="@+id/tv_answerD_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="学生的行为培养"/>
    </LinearLayout>

</LinearLayout>