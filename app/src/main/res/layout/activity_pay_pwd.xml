<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:id="@+id/ll_setting_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="设置支付密码"
            android:textColor="@color/black_66"
            android:layout_marginTop="30dp"
            android:textSize="13sp" />
        <LinearLayout
            android:id="@+id/layout_psw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/input_box"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/et_1"
                style="@style/pay_pwd"/>
            <EditText
                android:id="@+id/et_2"
                style="@style/pay_pwd"/>

            <EditText
                android:id="@+id/et_3"
                style="@style/pay_pwd"/>

            <EditText
                android:id="@+id/et_4"
                style="@style/pay_pwd"/>

            <EditText
                android:id="@+id/et_5"
                style="@style/pay_pwd"/>

            <EditText
                android:id="@+id/et_6"
                style="@style/pay_pwd"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="支付密码不能与登录密码一样"
            android:drawablePadding="5dp"
            android:textColor="@color/gray_99"
            android:layout_marginTop="10dp"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:textSize="15sp"
            android:enabled="false"
            android:text="下一步"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upd_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:text="134****7564"
                android:textColor="@color/black_66"/>

            <Button
                android:id="@+id/btnCode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_tra_shape"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="获取验证码"
                android:textColor="@color/btn_blue_nomal" />
        </RelativeLayout>
        <View style="@style/line_c8Style"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:textColor="@color/black_66"
            android:hint="请输入验证码"
            android:textColorHint="@color/gray_99"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="20dp"/>
        <View style="@style/line_c8Style"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:textColor="@color/black_66"
            android:hint="请输入新支付密码(6位纯数字)"
            android:textColorHint="@color/gray_99"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="20dp"/>
        <View style="@style/line_c8Style"/>
        <Button
            android:id="@+id/btnUpdPwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:textSize="15sp"
            android:text="重置密码"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
