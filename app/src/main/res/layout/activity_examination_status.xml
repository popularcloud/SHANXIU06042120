<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    <include layout="@layout/include_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginTop="38dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_portrait_100" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="很遗憾，未通过"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_blue_nomal"
                android:textStyle="bold"
                android:text="60分"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_99"
                android:text="/100分"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:background="@color/f0_gray_line"/>
    <LinearLayout
        android:id="@+id/ll_pay_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/f0_gray_line"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:text="答题卡"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/circular_blue_line_shape_small"
                android:drawablePadding="@dimen/dp_5"
                android:textSize="15sp"
                android:text="正确"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/circular_blue_shape_small"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginLeft="24dp"
                android:textSize="15sp"
                android:text="错误"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/circular_gray_line_shape_small"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:textSize="15sp"
                android:text="未答"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_myData"
            android:background="@color/f0_gray_line"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_10"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="16sp"
            android:text="重考"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:background="@drawable/btn_blue_select_shape"/>
    </LinearLayout>
</LinearLayout>