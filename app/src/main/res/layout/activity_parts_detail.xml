<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	>
	<include layout="@layout/include_title"/>
	<include layout="@layout/layout_main_head_bg" />
	<TextView
		android:id="@+id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingTop="5dp"
		android:textColor="@color/pickerview_topbar_title"
		android:textSize="13sp"
		android:text="华硕吃鸡显卡"/>
	<TextView
		android:id="@+id/tv_price"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/red_money"
		android:paddingLeft="10dp"
		android:paddingTop="5dp"
		android:text="￥30"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="8px"
		android:background="@color/pickerview_bg_topbar"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingTop="5dp"
		android:textSize="13sp"
		android:textColor="@color/black_66"
		android:text="@string/spec"/>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_specs"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="bottom">
		<Button
			android:id="@+id/btnReturn"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="44dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/button_login_selector"
			android:gravity="center"
			android:text="返回报价"
			android:textColor="#fff"
			android:textSize="15sp" />
		<Button
			android:id="@+id/btnLook"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="44dp"
			android:layout_margin="10dp"
			android:background="@drawable/button_login_selector"
			android:gravity="center"
			android:text="查看清单"
			android:textColor="#fff"
			android:textSize="15sp" />
	</LinearLayout>
</LinearLayout>
