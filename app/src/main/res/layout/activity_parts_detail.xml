<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:background="@color/f0_gray_line">
	<include layout="@layout/include_title"/>
	<include layout="@layout/layout_main_head_bg" />
	<TextView
		android:id="@+id/tv_price"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/red_3a"
		android:background="@color/white"
		android:paddingLeft="15dp"
		android:gravity="center_vertical"
		android:paddingTop="10dp"
		android:textStyle="bold"
		android:textSize="18sp"
		android:text="￥30"/>
	<TextView
		android:id="@+id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="15dp"
		android:background="@color/white"
		android:paddingTop="5dp"
		android:textColor="@color/black"
		android:textSize="15sp"
		android:text="华硕吃鸡显卡"/>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_specs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingBottom="7dp"/>
	<TextView
		android:id="@+id/tv_good_detail_txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:padding="15dp"
		android:textColor="@color/black"
		android:background="@color/white"
		android:layout_marginTop="4dp"
		android:text="商品详情"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:paddingRight="10dp"
		android:paddingLeft="10dp">
		<WebView
			android:id="@+id/wv_content"
			android:layout_width="match_parent"
			android:padding="0dp"
			android:layout_height="match_parent"/>
	</LinearLayout>
	<View style="@style/line_f0Style" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="bottom">
		<TextView
			android:id="@+id/btnLook"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="44dp"
			android:background="@color/white"
			android:gravity="center"
			android:text="查看清单"
			android:textColor="@color/black"
			android:textSize="16sp" />
		<TextView
			android:id="@+id/btnAdd"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="44dp"
			android:background="@color/red_3a"
			android:gravity="center"
			android:text="加入清单"
			android:textColor="@color/white"
			android:textSize="16sp" />
	</LinearLayout>
	<View style="@style/line_f0Style" />
</LinearLayout>
