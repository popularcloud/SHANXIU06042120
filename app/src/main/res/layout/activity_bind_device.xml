<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:id="@+id/rl_repair_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_44"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:layout_height="44dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="单位地址"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

            <!--<EditText
                android:id="@+id/tv_type"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:hint="请输入型号"
                android:background="@null"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />-->
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="right"
                android:hint="请选择单位地址"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:text="单位名称"/>
            <EditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:hint="请输入单位名称"
                android:background="@null"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:text="使用人"/>
            <EditText
                android:id="@+id/et_used_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:hint="请输入使用人姓名"
                android:background="@null"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:text="使用科室"/>
            <EditText
                android:id="@+id/et_used_room"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:hint="请输入使用科室"
                android:background="@null"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_33"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:text="电话"/>
            <EditText
                android:id="@+id/et_company_phone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:hint="请输入使用人电话(非必填)"
                android:background="@null"
                android:inputType="number"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/line_c8Style"/>
        <RelativeLayout
            android:id="@+id/rl_device_type"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="类别"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="right"
                android:hint="请选择设备类别"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </RelativeLayout>
        <View style="@style/line_c8Style"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="品牌"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

          <!--  <EditText
                android:id="@+id/tv_brand"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:hint="请输入品牌"
                android:background="@null"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />-->
            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="right"
                android:hint="请选择品牌"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </RelativeLayout>
        <View style="@style/line_c8Style"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="型号"
                android:textColor="@color/black_66"
                android:textSize="14sp" />

            <!--<EditText
                android:id="@+id/tv_type"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:hint="请输入型号"
                android:background="@null"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />-->
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/you_new"
                android:gravity="right"
                android:hint="请选择型号"
                android:textColorHint="@color/gray_99"
                android:textColor="@color/black_66"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnAffirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
       android:layout_margin="15dp"
        android:background="@drawable/button_login_selector"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="15sp" />
    <ListView
        android:id="@+id/down_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="148dp"
        android:visibility="gone" />
</FrameLayout>
