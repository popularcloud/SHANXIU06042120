	<RelativeLayout
		android:id="@+id/rl_ali_pay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:layout_marginTop="1px"
		android:background="@drawable/selector_item_bg">
		<ImageView
			android:id="@+id/iv_header_alipay"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_centerVertical="true"
			android:src="@drawable/account_alipay"/>
		<TextView
			android:id="@+id/tv_alipay"
			android:textColor="@color/black_0a"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/iv_header_alipay"
			android:layout_marginLeft="15dp"
			android:text="提现支付宝"
			android:gravity="center_vertical"
			android:textSize="15sp"/>
		<TextView
			android:textColor="@color/gray_99"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@+id/iv_header_alipay"
			android:layout_marginTop="4dp"
			android:layout_below="@+id/tv_alipay"
			android:text="推荐有支付宝账号的用户使用"
			android:gravity="center_vertical"
			android:textSize="12sp"/>
		<ToggleButton
			android:id="@+id/tBtnSecretAlipay"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:layout_marginRight="20dp"
			android:button="@drawable/wallet_switch_btn"
			android:checked="false"
			android:textOff=""
			android:textOn=""/>
	</RelativeLayout>
