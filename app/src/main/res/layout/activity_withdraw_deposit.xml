<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/bg_f7"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:focusableInTouchMode="true"
	android:focusable="true">
	<include layout="@layout/include_title"/>

	<RelativeLayout
		android:id="@+id/rl_wechat_pay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:padding="15dp"
		android:background="@drawable/selector_item_bg">
		<ImageView
			android:id="@+id/iv_header_wechat"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_centerVertical="true"
			android:src="@drawable/account_wechat_money"/>
		<TextView
			android:id="@+id/tv_wechat"
			android:textColor="@color/black_0a"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@+id/iv_header_wechat"
			android:text="提现微信"
			android:gravity="center_vertical"
			android:textSize="15sp"/>
		<TextView
			android:textColor="@color/gray_99"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@+id/iv_header_wechat"
			android:layout_marginTop="4dp"
			android:layout_below="@+id/tv_wechat"
			android:text="推荐安装微信的用户使用"
			android:gravity="center_vertical"
			android:textSize="12sp"/>
		<ToggleButton
			android:id="@+id/tBtnSecretWechat"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:button="@drawable/wallet_switch_btn"
			android:checked="true"
			android:layout_marginRight="20dp"
			android:textOff=""
			android:textOn=""/>
	</RelativeLayout>

