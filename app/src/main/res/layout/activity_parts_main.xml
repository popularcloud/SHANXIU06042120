<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <com.lwc.shanxiu.view.DisInterceptNestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="parallax"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_collapseParallaxMultiplier="0.8">
            <LinearLayout
                android:id="@+id/user_head_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.lwc.shanxiu.view.ImageCycleView
                    android:id="@+id/ad_view"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:tag="overScroll"/>
            </LinearLayout>
        </com.lwc.shanxiu.view.DisInterceptNestedScrollView>
        <include layout="@layout/include_search_title"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_grid"
        android:layout_below="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:visibility="visible">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewpager"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>
    <View
        android:id="@+id/line_grid"
        android:layout_below="@id/rl_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/f0_gray_line"
        android:layout_weight="1"></View>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/btnReturn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:text="返回报价"
            android:visibility="gone"
            android:textColor="#fff"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/btnLook"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:text="查看清单"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
