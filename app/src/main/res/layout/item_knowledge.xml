<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_0a"
            android:maxLines="3"
            android:textSize="15sp"
            android:text="密修平台服务商维修技能培训"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台密修平台"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/tv_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="11sp"
            android:text="789次"
            android:drawableLeft="@drawable/ic_view_count"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="11sp"
            android:text="56分钟前"
            android:drawableLeft="@drawable/ic_create_time"
            android:drawablePadding="5dp"
            android:layout_marginLeft="13dp"
            />
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo_new"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/iv_is_video"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_video"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
