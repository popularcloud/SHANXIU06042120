<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="@color/bg_f7"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:scrollbars="none">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_margin="10dp"
				android:background="@drawable/button_popup_shape">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="43dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/txt_name"
						android:layout_marginLeft="20dp"
						android:layout_width="80dp"
						android:layout_height="match_parent"
						android:textSize="14sp"
						android:text="报价金额"
						android:textColor="@color/black_66"
						android:gravity="center_vertical" />

					<EditText
						android:id="@+id/et_content"
						android:layout_marginRight="10dp"
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:background="@null"
						android:textColor="@color/black_66"
						android:hint="请输入报价金额"
						android:textColorHint="@color/gray_99"
						android:inputType="number"
						android:textSize="14sp"
						android:maxLength="8"
						android:gravity="center_vertical"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginRight="20dp"
						android:textSize="14sp"
						android:text="元"
						android:textColor="@color/black_66"
						android:gravity="center_vertical" />
				</LinearLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.5dp"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:background="@color/gray_99" />
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="43dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:layout_marginLeft="20dp"
						android:layout_width="80dp"
						android:layout_height="match_parent"
						android:textSize="14sp"
						android:text="配件名称"
						android:textColor="@color/black_66"
						android:gravity="center_vertical" />

					<EditText
						android:id="@+id/et_pjname"
						android:layout_marginRight="20dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:minHeight="30dp"
						android:layout_weight="1"
						android:textSize="14sp"
						android:textColor="@color/black_66"
						android:hint="请输入配件名称"
						android:textColorHint="@color/gray_99"
						android:background="@null"
						android:gravity="center_vertical"/>
				</LinearLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.5dp"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:background="@color/gray_99"  />
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minHeight="43dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:layout_marginLeft="20dp"
						android:layout_width="80dp"
						android:layout_height="match_parent"
						android:textSize="14sp"
						android:text="配件型号"
						android:textColor="@color/black_66"
						android:gravity="center_vertical" />
					<EditText
						android:id="@+id/et_pjtype"
						android:layout_marginRight="20dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:minHeight="30dp"
						android:layout_weight="1"
						android:textSize="14sp"
						android:hint="请输入配件型号"
						android:textColor="@color/black_66"
						android:textColorHint="@color/gray_99"
						android:background="@null"
						android:gravity="center_vertical"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:background="@drawable/button_popup_shape">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:gravity="center_vertical"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:text="报价描述："
					android:textColor="@color/black_66"
					android:textSize="14sp" />
				<View
					android:layout_width="match_parent"
					android:layout_height="0.5dp"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:layout_marginBottom="10dp"
					android:background="@color/gray_99"  />
				<EditText
					android:id="@+id/et_repair_des"
					android:textSize="14sp"
					android:padding="8dp"
					android:hint="报价的详细描述"
					android:gravity="top|left"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/black_66"
					android:textColorHint="@color/gray_99"
					android:minHeight="80dp"
					android:background="@null"/>
			</LinearLayout>
		</LinearLayout>

	</ScrollView>

	<Button
		android:id="@+id/btn_send_repair"
		android:layout_width="match_parent"
		android:layout_height="46dp"
		android:layout_margin="15dp"
		android:background="@drawable/button_login_selector"
		android:text="提交报价"
		android:textColor="#fff" />
</LinearLayout>
