<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="@color/f0_gray_line"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:scrollbars="none">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8px"
					android:background="@color/white"
					android:padding="15dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/txt_name"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:textSize="15sp"
						android:text="报价金额"
						android:textColor="@color/black"
						android:gravity="center_vertical" />
					<EditText
						android:id="@+id/et_content"
						android:layout_marginLeft="37dp"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="match_parent"
						android:background="@null"
						android:textColor="@color/black"
						android:hint="请输入报价金额"
						android:textColorHint="@color/line_cc"
						android:inputType="number"
						android:textSize="15sp"
						android:maxLength="8"
						android:gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="15dp"
					android:gravity="center_vertical"
					android:layout_marginTop="1px"
					android:background="@color/white"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:textSize="15sp"
						android:text="配件名称"
						android:textColor="@color/black"
						android:gravity="center_vertical" />
					<EditText
						android:id="@+id/et_pjname"
						android:layout_marginLeft="37dp"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:textSize="15sp"
						android:textColor="@color/black"
						android:hint="请输入配件名称"
						android:textColorHint="@color/line_cc"
						android:background="@null"
						android:gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="1px"
					android:padding="15dp"
					android:gravity="center_vertical"
					android:background="@color/white"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="15sp"
						android:text="配件型号"
						android:textColor="@color/black"
						android:gravity="center_vertical" />
					<EditText
						android:id="@+id/et_pjtype"
						android:layout_marginLeft="37dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="15sp"
						android:hint="请输入配件型号"
						android:textColor="@color/black"
						android:textColorHint="@color/line_cc"
						android:background="@null"
						android:gravity="center_vertical"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="8px"
				android:background="@color/white">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="15dp"
					android:gravity="center_vertical"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:text="配件描述："
					android:textColor="@color/black"
					android:textSize="15sp" />
				<View style="@style/line_f0Style"/>
				<EditText
					android:id="@+id/et_repair_des"
					android:textSize="15sp"
					android:padding="15dp"
					android:hint="请输入报价描述"
					android:gravity="top|left"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:background="@null"/>
			</LinearLayout>
		</LinearLayout>

	</ScrollView>

	<Button
		android:id="@+id/btn_send_repair"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_margin="15dp"
		android:textSize="16sp"
		android:background="@drawable/button_login_selector"
		android:text="提交报价"
		android:textColor="#fff" />
</LinearLayout>
