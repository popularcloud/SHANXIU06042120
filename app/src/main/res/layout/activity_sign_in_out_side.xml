<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/oval_gray_bg">
                <com.lwc.shanxiu.widget.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/dp_57"
                    android:layout_height="@dimen/dp_57"
                    android:src="@drawable/default_portrait_100" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_head"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="李明"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="广东智修互联大数据有限公司"
                    android:textColor="@color/gray_99"
                    android:layout_below="@+id/tv_name"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/txtName"
                    android:text="2019.08.03"
                    android:textColor="@color/gray_99"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/line_f0Style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_15"
                android:maxLines="3"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:text="福喜大厦"/>
            <TextView
                android:id="@+id/tv_select_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/btn_blue_nomal"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="地址微调"/>
        </LinearLayout>
        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:text="拜访对象"/>
            <EditText
                android:id="@+id/et_visit_object"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_0a"
                android:textColorHint="@color/line_cc"
                android:background="@null"
                android:gravity="left"
                android:layout_gravity="right"
                android:paddingLeft="@dimen/dp_25"
                android:hint="请输入拜访对象"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center"
        android:background="@drawable/ic_yuan_blue">
        <TextView
            android:id="@+id/tv_status"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:text="签到"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:text="15:35:36"/>
    </LinearLayout>
</LinearLayout>
