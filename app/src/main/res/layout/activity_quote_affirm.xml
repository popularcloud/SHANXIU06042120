<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_white_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="故障描述"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />

                <View style="@style/line_ccStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:id="@+id/et_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="填写故障原因"
                    android:background="@null"
                    android:gravity="left|top"
                    android:textColorHint="@color/gray_99"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_white_bg"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="故障图片"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />

                <com.lwc.shanxiu.view.MyGridView
                    android:id="@+id/gridview_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:listSelector="@drawable/selector_item_bg"
                    android:numColumns="4"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:layout_margin="10dp"
                    android:scrollbars="none"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rLayoutDeviceType"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_round_white_bg">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="设备类型"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtDeviceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imgDeviceGoto"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:text="办公设备"
                    android:singleLine="true"
                    android:textColor="@color/color_33"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgDeviceGoto"
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tl_solve_scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_white_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="解决方案"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_solve_scheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_alignParentRight="true"
                    android:text="请选择解决方案"
                    android:textColor="@color/black_66"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/you_new"
                    android:textSize="14sp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout_type_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_round_white_bg"
                android:visibility="gone">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtJia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="维修总额"
                    android:textColor="@color/black_66"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_errorMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_money"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_jia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_white_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_smf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:text="基本上门费"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_smf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:textColor="@color/color_33"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:text="元"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_rjf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="维修价格"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tv_rjf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:textColor="@color/color_33"
                        android:enabled="false"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:maxLength="5"
                        android:background="@null"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:text="元"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:text="其它费用"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/et_qtfy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:hint="请输入金额"
                        android:background="@null"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:maxLength="5"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/gray_99"
                        android:textColor="@color/color_33"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:text="元"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />
                </RelativeLayout>
                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:text="硬件更换费"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_yjfy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:hint="请输入硬件金额"
                        android:background="@null"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:maxLength="5"
                        android:textColorHint="@color/gray_99"
                        android:textColor="@color/color_33"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:text="元"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />
                </RelativeLayout>-->
                <RelativeLayout
                    android:id="@+id/rLayoutHardwareReplacement"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="硬件更换"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtHardwareReplacement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_unit"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="@color/color_33"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/imgHardwareReplacement"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1"
                        android:text="元"
                        android:singleLine="true"
                        android:textColor="@color/color_33"
                        android:visibility="gone"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/imgHardwareReplacement"
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/you_new" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rLayoutDetailedList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txtDetailedList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="查看清单"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/imgDetailedList"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_33"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imgDetailedList"
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/you_new" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="备注"
                        android:textColor="@color/black_66"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_money_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="20dp"
                        android:hint="请输入其它费用说明"
                        android:gravity="right"
                        android:textColorHint="@color/gray_99"
                        android:background="@null"
                        android:textColor="@color/color_33"
                        android:textSize="14sp" />
                </RelativeLayout>
                <View style="@style/line_c8Style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/tv_msmf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="免除上门费"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/presentation_mode_no_choice"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="14sp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_66"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <Button
            android:id="@+id/btnRefuse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:text="无法维修"
            android:textColor="#fff"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btnAffirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:text="提交报价"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
